@model StudentProjectManagement.Areas.Admin.Models.Project

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content">
    <div class="card card-default p-5">
        <h2 class="mb-5 text-center">Add Project</h2>
        <!-- Form targeting a specific action -->
        <form asp-action="SaveProject" method="post">
            <input type="hidden" asp-for="ProjectId" />

            <div class="form-row">
                <!-- Project Title -->
                <div class="col-md-12 mb-3">
                    <label asp-for="Title" class="form-label">Project Title<span class="text-danger">*</span></label>
                    <input asp-for="Title" class="form-control" placeholder="Enter project title" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <!-- Project Description -->
                <div class="col-md-12 mb-3">
                    <label asp-for="Description" class="form-label">Description<span class="text-danger">*</span></label>
                    <textarea asp-for="Description" class="form-control" placeholder="Enter project description"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <!-- Start Date -->
                <div class="col-md-6 mb-3">
                    <label asp-for="StartDate" class="form-label">Start Date<span class="text-danger">*</span></label>
                    <input asp-for="StartDate" type="date" class="form-control" />
                    <span asp-validation-for="StartDate" class="text-danger"></span>
                </div>

                <!-- End Date -->
                <div class="col-md-6 mb-3">
                    <label asp-for="EndDate" class="form-label">End Date<span class="text-danger">*</span></label>
                    <input asp-for="EndDate" type="date" class="form-control" />
                    <span asp-validation-for="EndDate" class="text-danger"></span>
                </div>

                <div class="col-md-12 mb-3">
                    <label asp-for="Status" class="form-label">Status<span class="text-danger">*</span></label>
                    <select asp-for="Status" class="form-control">
                        <option value="" selected>Select Status</option>
                        <option value="Completed">Completed</option>
                        <option value="Active">Active</option>
                        <option value="Pending" selected >Pending</option>
                    </select>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>


                <!-- Mentor -->
                <div class="col-md-12 mb-3">
                    <label asp-for="MentorId" class="form-label">Mentor<span class="text-danger">*</span></label>
                    <select asp-for="MentorId" class="form-control" asp-items="@ViewBag.StatusOptions">
                        <option value="">Select Mentor</option>
                    </select>
                    <span asp-validation-for="MentorId" class="text-danger"></span>
                </div>
            </div>

            <div class="d-flex g-2">
                <button class="btn btn-primary btn-pill mr-2" type="submit">Save & Add Team Members</button>
                <a asp-action="ProjectList" class="btn btn-danger btn-pill mr-2" type="submit">Back</a>
            </div>
        </form>
    </div>
</div>
